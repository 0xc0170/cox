<?xml version="1.0" ?>
<Component>
    <Name>WiFi_Shield</Name>
    <Description>Arduino WiFi shield driver</Description>

    <Version>1.0.0</Version>
    <KeyWord>Arduino, Wireless, WiFi, Shield, SPI, UART, CoX</KeyWord>

    <Filter>
        <Interface>GPIO</Interface>
        <Interface>UART</Interface>
        <Interface>SPI</Interface>
        <CoXBased>true</CoXBased>
    </Filter>

    <Categorys>
        <Layer name="Driver">
            <Cate name="Driver"/>
        </Layer>
    </Categorys>

    <SupportDevices>
        <Device>WiFi_Shield</Device>
    </SupportDevices>

    <Files>
        <File>$Driver_ROOT$\lib\*</File>
    </Files>

    <CoIDEFiles>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\server_drv.c    </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\server_drv.h    </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\spi_drv.c       </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\spi_drv.h       </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\WiFi.c          </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\WiFi.h          </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\WiFiClient.c    </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\WiFiClient.h    </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\wifi_drv.c      </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\wifi_drv.h      </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\wifi_spi.h      </File>
        <File>PROJECT_ROOT$\CoX\Shield\Arduino\WiFi_Shield\lib\wl_definitions.h</File>
    </CoIDEFiles>

    <DependentComponentInterfaceTag>
        <Tag>CoX.GPIO</Tag>
        <Tag>CoX.SysCtl</Tag>
        <Tag>CoX.UART</Tag>
        <Tag>CoX.SPI</Tag>
    </DependentComponentInterfaceTag>

    <SupportMCUs>
        <MCU>ST</MCU>
    </SupportMCUs>

    <SupportMCUSeries>
        <Series>STM32F10x</Series>
    </SupportMCUSeries>

    <Doc>$Driver_ROOT$\doc\</Doc>

</Component>

